{
  "compilerOptions": {
    "outDir": "./lib",
    "allowJs": true,
    "target": "ES2020",
    "module": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noImplicitThis": false,
    "strict": true,
    "declaration": true
  },
  "ts-node": { "esm": true },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test/**/*", "**/*.spec.ts"]
}
